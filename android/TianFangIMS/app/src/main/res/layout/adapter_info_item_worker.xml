<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/adapter_info_item_worker_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/checkbox_normal" />

    <!--<ImageView-->
    <!--android:id="@+id/adapter_info_item_worker_header"-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="0dp"-->
    <!--app:layout_heightPercent="15%w"-->
    <!--app:layout_marginPercent="2%w"-->
    <!--app:layout_widthPercent="15%w" />-->
    <com.tianfangIMS.im.view.CircleImageViews
        android:id="@+id/adapter_info_item_worker_header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:RCCornerRadius="3dp"
        app:RCDefDrawable="@mipmap/me_icon_photo"
        app:RCShape="circle"
        app:layout_heightPercent="15%w"
        app:layout_marginPercent="2%w"
        app:layout_widthPercent="15%w" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_heightPercent="15%w"
        app:layout_marginPercent="2%w">

        <TextView
            android:id="@+id/adapter_info_item_worker_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="测试" />

        <TextView
            android:id="@+id/adapter_info_item_worker_job"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="测试"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>
