<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@color/White">

        <com.tianfangIMS.im.view.CircleImageViews
            android:id="@+id/iv_person_photo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/cb_addfrien"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            app:RCCornerRadius="3dp"
            app:RCDefDrawable="@mipmap/me_icon_photo"
            app:RCShape="circle" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_person_departmentName"
                style="@style/Contacts_company_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天坊信息科技有限公司" />

            <TextView
                android:id="@+id/tv_person_departmentTxt"
                style="@style/Contacts_company_txt_huise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="灰色字体测试" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>