<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/adapter_info_item_branch_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/checkbox_normal" />

    <TextView
        android:id="@+id/adapter_info_item_branch_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_toRightOf="@id/adapter_info_item_branch_iv"
        android:gravity="center_vertical"
        app:layout_heightPercent="15%w"
        app:layout_marginLeftPercent="5%w" />

    <TextView
        android:id="@+id/adapter_info_item_branch_count"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        app:layout_heightPercent="15%w"
        app:layout_marginRightPercent="5%w" />

</com.zhy.android.percent.support.PercentRelativeLayout>
