<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="txt_login_forget">
        <item name="android:textSize">14sp</item>
    </style>
    <!---->
    <style name="tab_menu_text">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/tab_menu_job_txt</item>
    </style>


    <style name="tab_menu_bgnum">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@mipmap/bg_num</item>
        <item name="android:layout_marginLeft">-10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorNaviationClick</item>
    </style>

    <style name="me_txt_use">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="me_txt">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#515151</item>
        <item name="android:layout_marginLeft">83dp</item>
    </style>

    <style name="me_txt_userinfo">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>

    <style name="userinfo_fragment_infotext">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:layout_marginLeft">83dp</item>
    </style>

    <style name="userinfo_dialog">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="me_imageview">
        <item name="android:layout_marginLeft">22dp</item>
    </style>

    <style name="settings_text">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>

    <style name="settings_img_jiantou">
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="newmessage_tx">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>

    <style name="public_tishi">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>

    <style name="resetpwd_image">
        <item name="android:layout_marginLeft">34dp</item>
    </style>

    <style name="resetpwd_edittext">
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:textColorHint">#BFC9D9</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>

    <style name="Contacts_company_txt">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="Contacts_company_txt_huise">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="ShareLocationDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- dialog背景样式 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
    </style>
    <style name="Dialog_Fullscreen" parent="@android:style/Theme.Holo.DialogWhenLarge">
        <!-- dialog背景样式 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="ac_search_no_results">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">45dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Anim_fade" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>
    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/bottom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/bottom_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/bottom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/bottom_out</item>
    </style>
</resources>
