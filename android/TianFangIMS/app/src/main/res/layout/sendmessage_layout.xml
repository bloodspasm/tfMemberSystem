<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/sendmessage_search"
        layout="@layout/search_layout" />

    <RelativeLayout
        android:id="@+id/rl_sendmessage_contacts"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@color/White">

        <ImageView
            android:id="@+id/iv_sendmessage_chatroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_mine_chatroom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_sendmessage_chatroom"
            android:text="我的群组" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sendmessage_topcontacts"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/White">

        <ImageView
            android:id="@+id/iv_sendmessage_topcontacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_topcontacts" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_sendmessage_topcontacts"
            android:text="常用联系人" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sendmessage_allContacts"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/White">

        <ImageView
            android:id="@+id/iv_sendmessage_allContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/addgroup_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_sendmessage_allContacts"
            android:text="所有联系人" />
    </RelativeLayout>
</LinearLayout>