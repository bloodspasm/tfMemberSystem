<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_newMessage"
            android:layout_width="match_parent"
            android:layout_height="59dp">

            <TextView
                style="@style/settings_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="新消息通知" />

            <ImageView
                style="@style/settings_img_jiantou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_right_jiao" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_resetPwd"
            android:layout_width="match_parent"
            android:layout_height="59dp">

            <TextView
                style="@style/settings_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="重置密码" />

            <ImageView
                style="@style/settings_img_jiantou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_right_jiao" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="59dp">

            <TextView
                style="@style/settings_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="自定义快捷键设置" />

            <ImageView
                style="@style/settings_img_jiantou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_right_jiao" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/settting_clear_conversation"
            android:layout_width="match_parent"

            android:layout_height="59dp">

            <TextView
                style="@style/settings_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="清空聊天记录" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="59dp">

            <TextView
                style="@style/settings_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="开启悬浮球" />

            <com.tianfangIMS.im.switchbutton.SwitchButton
                android:id="@+id/sw_sttings_notfaction"
                style="@style/SwitchButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                app:kswAnimationDuration="300"
                app:kswBackDrawable="@drawable/switchbtn_selector"
                app:kswBackMeasureRatio="1.7"
                app:kswThumbDrawable="@mipmap/icon_switch_boll"
                app:kswThumbMarginBottom="0.5dp"
                app:kswThumbMarginLeft="0.5dp"
                app:kswThumbMarginRight="0.5dp"
                app:kswThumbMarginTop="0.5dp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_setting_signout"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginTop="56dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="退出登录"
            android:textColor="#FFA256"
            android:textSize="14dp" />
    </RelativeLayout>
</LinearLayout>